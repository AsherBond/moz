<% @comments.each do |comment| %>
	<blockquote>
		<p><%= comment.content %></p>
		<small><%= link_to comment.user.username, comment.user %> on <%= comment.created_at.strftime('%b %d, %Y at %H:%M') %></small>
	</blockquote>
<% end %>
