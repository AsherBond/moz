<div class="row">
	<div class="span3">
		<%= link_to "<i class='icon-plus'></i> Create New Article".html_safe, new_user_article_path(current_user), :class => "btn btn-large btn-success" %>
		<hr>

		<h5>Easily manage and edit your articles</h5>
		<p>To get started add a new article, and you find article settings in the edit menu!</p>
	</div>
	<div class="span9">
		<table class="table table-striped table-bordered">
		  <thead>
		    <tr>
		      <th width="30%">Title</th>
		      <th width="30%">Short</th>
		      <th width="10%">Rating</th>
		      <th width="30%">Options</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @articles.each do |a| %>
		    <tr>
		      <td><%= link_to a.title, a %></td>
		      <td><%= truncate(strip_tags(a.content), :length => 25, :separator => ' ') %></td>
		      <td>
		      	<i class="icon-star"></i>
		      	<i class="icon-star"></i>
		      	<i class="icon-star"></i>
		      	<i class="icon-star-empty"></i>
		      	<i class="icon-star-empty"></i>
		      </td>
		      <td>
		      	<%= link_to "Edit", edit_article_path(a), :class => "btn btn-mini" %> 
		      	<%= link_to "Delete", article_path(a), :class => "btn btn-danger btn-mini", :confirm => "Are you sure you want to delete this article?", :method => :delete %> 
		      </td>
		    </tr>
		    <% end %>

		  </tbody>
		</table>
		<% if @articles.empty? %>
			<div class="alert alert-warning">There are no articles. <%= link_to "Click here", new_user_article_path(current_user) %> to get started. <a class="close" data-dismiss="alert" href="#">Ã—</a></div>
		<% end %>

	</div>
</div>