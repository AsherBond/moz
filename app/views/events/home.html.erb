<div class="row">
	<div class="span3">
		<%= link_to "<i class='icon-plus'></i> Create New Event".html_safe, new_user_event_path(current_user), :class => "btn btn-large btn-success" %>
		<hr>

		<h5>Easily manage and edit your events</h5>
		<p>To get started add a new event, and you find event settings in the edit menu!</p>
	</div>
	<div class="span9">
		<table class="table table-striped table-bordered">
		  <thead>
		    <tr>
		      <th width="30%">Title</th>
		      <th width="20%">Start</th>
		      <th width="20%">End</th>
		      <th width="30%">Options</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @events.each do |e| %>
		    <tr>
		      <td><%= link_to e.title, e %></td>
		      <td><%= e.start.strftime('%b %d, %Y at %H:%M') %></td>
		      <td><%= e.end.strftime('%b %d, %Y at %H:%M') %></td>
		      <td>
		      	<%= link_to "Edit", edit_event_path(e), :class => "btn btn-mini" %> 
		      	<%= link_to "Delete", event_path(e), :class => "btn btn-danger btn-mini", :confirm => "Are you sure you want to delete this event?", :method => :delete %> 
		      </td>
		    </tr>
		    <% end %>

		  </tbody>
		</table>
		<% if @events.empty? %>
			<div class="alert alert-warning">There are no events. <%= link_to "Click here", new_user_event_path(current_user) %> to get started. <a class="close" data-dismiss="alert" href="#">Ã—</a></div>
		<% end %>
	</div>
</div>