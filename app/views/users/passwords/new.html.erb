<div class="row">
  	<div class="span8 offset2">
	  	<div class="well">
		  	<h2 class="hb">Forgot your password?</h2>

			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
			  <%= f.error_notification %>

			  <div class="inputs">
			    <%= f.input :email, :required => true %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Send me reset password instructions", :class => "btn btn-danger" %>
			  </div>
			<% end %>

			<%= render :partial => "devise/shared/links" %>
		</div>
	</div>
</div>
